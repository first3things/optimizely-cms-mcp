# Server Configuration
TRANSPORT=stdio                    # Transport method: stdio, sse, streamable-http
SERVER_NAME=optimizely-mcp-server
SERVER_VERSION=1.0.0

# Optimizely Graph Configuration
GRAPH_ENDPOINT=https://cg.optimizely.com/content/v2/graphql
GRAPH_SINGLE_KEY=your-single-key   # For single key auth
GRAPH_APP_KEY=your-app-key         # For HMAC auth (optional)
GRAPH_SECRET=your-secret           # For HMAC auth (optional)
GRAPH_AUTH_METHOD=single_key       # Auth method: single_key, hmac, basic, bearer

# Content Management API Configuration
CMA_BASE_URL=https://api.cms.optimizely.com/preview3/experimental
CMA_CLIENT_ID=your-client-id
CMA_CLIENT_SECRET=your-client-secret
CMA_GRANT_TYPE=client_credentials
CMA_TOKEN_ENDPOINT=https://api.cms.optimizely.com/oauth/token

# Optional Configuration
CACHE_TTL=300                      # Cache TTL in seconds
MAX_RETRIES=3                      # API retry attempts
TIMEOUT=30000                      # Request timeout in ms
LOG_LEVEL=info                     # Logging level